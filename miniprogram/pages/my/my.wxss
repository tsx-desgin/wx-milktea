.header-container{
  width: 100%;
  height: 300rpx;
  background-size:100% 240rpx;
  background-repeat: no-repeat;
  /* background-color: #f40; */
  padding: 0 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.user-Info{
  width: 100%;
  height: 200rpx;
  margin-top: 100rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 38rpx;
  color: #333;
}
.user-avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}