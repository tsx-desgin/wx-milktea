.header-container{
  width: 100%;
  height: 300rpx;
  background-size:100% 240rpx;
  background-repeat: no-repeat;
  /* background-color: #f40; */
  padding: 0 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  z-index: 999;
}
.user-Info{
  width: 100%;
  height: 200rpx;
  margin-top: 100rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 38rpx;
  color: #333;
}
.user-avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.menu-container{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}
.menu{
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.menu .row{
  width: 100%;
  height: 80rpx;
  display: flex;
}
.icon{
  width: 70rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffcc00;
  font-size: 50rpx;
  margin-right: 20rpx;
}
.name{
  width: 0;
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 32rpx;
  color: #333;
}