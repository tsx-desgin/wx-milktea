.add-btn{
  width: 100%;
  height: 88rpx;
  background: #ffcc00;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
}
.address-list{
  width: 100%;
  margin-top:20rpx ;
}
.address-item{
    width: 100%;
    height: 176rpx;
    background: #fff;
    padding: 40rpx 32rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20rpx;
}
.address-content{
    width: 0;
    flex: 1;
    color: #666;
    height: 100%;
    font-size:24rpx;
}
.address-name{
    font-size:32rpx ;
    height: 42rpx;
    margin-bottom:20rpx ;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.address-detail{
  /* line-height: 35rpx; */
  font-size: 26rpx;
  display: flex;
}
.address-detail .left{
  width: 20%;
}
.address-detail .right{
 width: 80%;
 /* flex-wrap: wrap; */
 display:-webkit-box; 
 overflow:hidden; 
 -webkit-box-orient:vertical;
 -webkit-line-clamp:2; 
}
.icon{
    font-size: 40rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50rpx;
    height: 100%;
}
.address-item.selected{
   background: #ffcc00;
}   
.address-item.selected .address-content{
  width: 0;
  flex: 1;
  height: 100%;
  color: #ffffff;
}        