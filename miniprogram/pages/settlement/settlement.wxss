.address-container{
  width: 100%;
  height: 150rpx;
  background: #fff;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.address{
  font-size: 34rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.name{
  font-size: 26rpx;
  line-height: 30rpx;
}
.addressname{
  margin-right: 20rpx;
}
.cart-container{
  margin-top: 20rpx;
  width: 100%;
  max-height: 400rpx;
  overflow: auto;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.cart-item{
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background: #fff;
  position: relative;
}
image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.cart-info{
  width: 0;
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}
.cart-desc{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  font-size: 26rpx;
  color: #999;
}
.cart-statistical{
  position: absolute;
  bottom: 0;
}
.cart-price{
  font-weight: 30rpx;
  font-weight: bold;
  color: red;
}
