.address-container{
  width: 100%;
  height: 150rpx;
  background: #fff;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.address{
  font-size: 34rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.name{
  font-size: 26rpx;
  line-height: 30rpx;
}
.addressname{
  margin-right: 20rpx;
}
.cart-container{
  margin-top: 20rpx;
  width: 100%;
  max-height: 400rpx;
  overflow: auto;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.cart-item{
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background: #fff;
  position: relative;
}
image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.cart-info{
  width: 0;
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}
.cart-desc{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  font-size: 26rpx;
  color: #999;
}
.cart-statistical{
  position: absolute;
  bottom: 0;
}
.cart-price{
  font-weight: 30rpx;
  font-weight: bold;
  color: red;
}
.coupon-container{
  background: #fff;
}
.checkbox-img{
  width: 35rpx;
  height: 35rpx;
  margin-top: 10rpx;
}
.limit-coupon{
  font-size: 20rpx;
  color: red;
  margin-left: 20rpx;
}
.submit-container{
  width: 100%;
  height: 88rpx;
  box-shadow: 0 0 15rpx 10rpx rgba(0, 0, 0, .3);
  border-radius: 44rpx;
  position: fixed;
  bottom: 10rpx;
  left: 0;
  overflow: hidden;
  background: #fff;
  display: flex;
}
.submit-container .btn{
  width: 200rpx;
  height: 100%;
  background: #ffcc00;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 36rpx;
}
.order-count{
  width: 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin:0 30rpx;
}
.actualPayment{
  font-size: 32rpx;
  color: #ffcc00;
  font-weight: bold;
}
.order-info{
  font-size: 24rpx;
  color: #999;
}
