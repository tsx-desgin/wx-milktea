<view class="cart-container">
    <scroll-view scroll-y="true"  bindscrolltolower="onscrolltolower" 
    class="cart-list-wrapper {{showList?'':'hidden'}}">
     <view wx:for="{{cart}}" wx:key="goodsId" class="goods-item">
        <image src="{{item.goodsImg}}" class="goods-img"></image>
        <view class="goods-info">
          <view class="goods-desc">{{item.goodsName}}</view>
          <view class="goods-price">¥{{item.goodsPrice}}</view>
          <view class="buy-number-container">
             <text catchtap="editCart" data-goods-id="{{item.goodsId}}" data-type="2" class="~icon ~iconjian {{item.buyNumber==0?'hidden':''}}"></text>
             <text class="number {{item.buyNumber==0?'hidden':''}}">{{item.buyNumber}}</text>
             <text catchtap="editCart" data-goods-id="{{item.goodsId}}" data-type="1" class="~icon ~iconadd"></text>
          </view>
        </view>
     </view>    
    </scroll-view>
  <view class="cart-count-wrapper" bindtap="showCartList">
     <view class="cart-icon">
       <image src="../../../images/cart/cart.png" class="cart-icon-img"></image>
     </view>
     <view class="cart-count">
        <view class="total">¥{{cartTotal}}</view>
        <view>免费配送</view>
     </view>
     <view class="cart-submit">去结算</view>
  </view>
</view>
