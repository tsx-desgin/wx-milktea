.address-container{
  width: 100%;
  height: 140rpx;
  background: #fff;
  border-bottom: 2rpx solid #eee;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.address{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.address-detail{
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.address-detail text{
  font-weight: normal;
  font-size: 28rpx;
}
.address-info{
  width: 100%;
  font-size: 26rpx;
  color: #333;
  margin-top: 20rpx;
}
.address-info text{
  margin-right: 20rpx;
}