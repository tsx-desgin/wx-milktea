.buy-number-container{
  width: 105rpx;
  height: 32rpx;
  position: absolute;
  right: 20rpx;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color:#ffcc00;
  font-size: 32rpx;
}
.buy-number-container .icon{
  width: 32rpx;
  height: 32rpx;
}
.buy-number-container .icon.iconadd{
  font-size: 35rpx;
}
.buy-number-container .number{
  width: 0;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.buy-number-container .hidden{
  opacity: 0;
}