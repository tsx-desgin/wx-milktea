.goods-List{
 width: 100%;
 height: 100%;
 background: #fff;
 padding-left: 20rpx;
 box-sizing: border-box;
}
.goods-title{
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.goods-item{
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.goods-img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.goods-info{
  width: 0;
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin:0 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.goods-desc{
  font-size: 24rpx;
  color: #666;
  width: 100%;
  /* 实现超出两行隐藏 */
  display:-webkit-box; 
  overflow:hidden; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.goods-price{
  font-weight: bold;
  font-size: 32rpx;
}