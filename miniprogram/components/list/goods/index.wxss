.goods-List{
 width: 100%;
 height: 100%;
 background: #fff;
 padding-left: 20rpx;
 box-sizing: border-box;
 position: relative;
}
.scroll-goods-view{
  width: 100%;
  height: 100%;
  padding-top: 88rpx;
  box-sizing: border-box;
}
.goods-title{
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  position: absolute;
  background: #fff;
  left: 20rpx;
  top: 0;
  z-index: 999;
}
.goods-item{
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.goods-img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.goods-info{
  width: 0;
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  position: relative;
}
.buy-number-container{
  width: 105rpx;
  height: 32rpx;
  position: absolute;
  right: 20rpx;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color:#ffcc00;
  font-size: 32rpx;
}
.buy-number-container .icon{
  width: 32rpx;
  height: 32rpx;
}
.buy-number-container .icon.iconadd{
  font-size: 35rpx;
}
.buy-number-container .number{
  width: 0;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.buy-number-container .hidden{
  opacity: 0;
}
.goods-desc{
  font-size: 24rpx;
  color: #666;
  width: 100%;
  /* 实现超出两行隐藏 */
  display:-webkit-box; 
  overflow:hidden; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.goods-price{
  font-weight: bold;
  font-size: 32rpx;
  color: red;
}